<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Facility Database Upload</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="navbar">
        <div class="navbar-brand">Facility Database Upload</div>
        <div class="navbar-user">
            <span class="username">Welcome, <%= user.username %> <span class="user-role">(<%= user.role %>)</span></span>
            <% if (user.role === 'admin') { %>
                <button id="downloadReportBtn" class="btn-report">Download Report</button>
                <a href="/users" class="btn-report">Manage Users</a>
            <% } %>
            <a href="/logout" class="btn-logout">Logout</a>
        </div>
    </div>

    <div class="container">
        <h1>Facility Database Upload</h1>
        <p class="subtitle">Upload PostgreSQL database information for up to 11 facilities</p>

        <div class="form-container">
            <div id="uploadMethod">
                <div class="upload-method-selector">
                    <button type="button" class="method-btn active" data-method="traditional">Traditional Upload</button>
                    <button type="button" class="method-btn" data-method="resumable">Resumable Upload (Large Files)</button>
                </div>
            </div>

            <!-- Traditional Upload Form -->
            <form id="uploadForm" enctype="multipart/form-data" style="display: block;">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                    <label for="facility_name">Facility Name *</label>
                    <select id="facility_name" name="facility_name" required>
                        <option value="">-- Loading facilities --</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="facility_code">Facility Code *</label>
                    <input type="text" id="facility_code" name="facility_code" readonly placeholder="Code will auto-populate">
                </div>

                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea id="description" name="description" rows="3" placeholder="Optional description of the facility"></textarea>
                </div>

                <div class="form-group">
                    <label for="file">PostgreSQL Dump File *</label>
                    <input type="file" id="file" name="file" required accept=".dump,.sql,.bak,.backup">
                    <small>Required: PostgreSQL dump files (DUMP, SQL, BAK, BACKUP)</small>
                </div>

                <div id="uploadProgress" class="upload-progress" style="display: none;">
                    <div class="progress-bar">
                        <div id="progressFill" class="progress-fill"></div>
                    </div>
                    <div class="progress-text">
                        <span id="progressPercent">0%</span>
                        <span id="progressSize"></span>
                    </div>
                </div>

                <button type="submit" class="btn-submit">Upload Facility</button>
            </form>

            <!-- Resumable Upload Form -->
            <form id="resumableForm" style="display: none;">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                    <label for="resumable_facility_name">Facility Name *</label>
                    <select id="resumable_facility_name" name="facility_name" required>
                        <option value="">-- Loading facilities --</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="resumable_facility_code">Facility Code *</label>
                    <input type="text" id="resumable_facility_code" name="facility_code" readonly placeholder="Code will auto-populate">
                </div>

                <div class="form-group">
                    <label for="resumable_description">Description</label>
                    <textarea id="resumable_description" name="description" rows="3" placeholder="Optional description of the facility"></textarea>
                </div>

                <div class="form-group">
                    <label for="resumable_file">PostgreSQL Dump File (Large Files) *</label>
                    <input type="file" id="resumable_file" name="file" required accept=".dump,.sql,.bak,.backup">
                    <small>Supports files up to 2GB with automatic resume on network disconnect</small>
                </div>

                <div id="resumableProgress" class="upload-progress" style="display: none;">
                    <div class="progress-header">
                        <span id="resumableFileName"></span>
                        <button type="button" id="cancelUploadBtn" class="btn-cancel" style="display: none;">Cancel Upload</button>
                    </div>
                    <div class="progress-bar">
                        <div id="resumableProgressFill" class="progress-fill"></div>
                    </div>
                    <div class="progress-text">
                        <span id="resumableProgressPercent">0%</span>
                        <span id="resumableChunkProgress"></span>
                        <span id="resumableUploadSpeed"></span>
                    </div>
                </div>

                <button type="submit" class="btn-submit" id="resumableSubmitBtn">Start Resumable Upload</button>
            </form>

            <div id="message" class="message"></div>

            <div id="downloadProgress" class="download-progress" style="display: none;">
                <div class="progress-header">
                    <span id="downloadFileName"></span>
                    <span id="downloadPercent">0%</span>
                </div>
                <div class="progress-bar">
                    <div id="downloadFill" class="progress-fill"></div>
                </div>
                <div class="progress-text">
                    <span id="downloadSize">0 MB / 0 MB</span>
                    <span id="downloadSpeed"></span>
                </div>
            </div>
        </div>

        <div class="facilities-container">
            <h2>Uploaded Facilities</h2>
            <div id="facilitiesList" class="facilities-list"></div>
        </div>
    </div>

    <div id="userData" data-role="<%= user.role %>" data-username="<%= user.username %>" style="display:none;"></div>
    <script src="/resumable-upload.js"></script>
    <script src="/upload-methods.js"></script>
    <script src="/app.js"></script>
</body>
</html>