{
  "testEnvironment": "node",
  "coverageDirectory": "./coverage",
  "collectCoverageFrom": [
    "controllers/**/*.js",
    "middleware/**/*.js",
    "routes/**/*.js",
    "!node_modules/**",
    "!coverage/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 70,
      "functions": 70,
      "lines": 70,
      "statements": 70
    }
  },
  "testMatch": [
    "**/__tests__/**/*.js",
    "**/?(*.)+(spec|test).js"
  ],
  "verbose": true,
  "testTimeout": 10000,
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
}
